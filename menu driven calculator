#include <stdio.h>

int main()
{
    int n1, n2, operator;
    float result;
    char y;

    printf("___CALCULATOR___\n");

    do
    {
        printf("\nEnter two values: ");
        scanf("%d %d", &n1, &n2);

        printf("\n1. ADDITION");
        printf("\n2. SUBTRACTION");
        printf("\n3. MULTIPLICATION");
        printf("\n4. DIVISION");
        printf("\nEnter an operation (1,2,3,4): ");
        scanf("%d", &operator);

        switch (operator)
        {
            case 1:
                result = n1 + n2;
                printf("Result = %.2f\n", result);
                break;

            case 2:
                result = n1 - n2;
                printf("Result = %.2f\n", result);
                break;

            case 3:
                result = n1 * n2;
                printf("Result = %.2f\n", result);
                break;

            case 4:
                if (n2 != 0)
                {
                    result = (float)n1 / n2;
                    printf("Result = %.2f\n", result);
                }
                else
                    printf("ERROR: Division by zero\n");
                break;

            default:
                printf("Invalid input\n");
        }

        printf("\nGo back to main menu? Press y or Y: ");
        scanf(" %c", &y);

    } while (y == 'y' || y == 'Y');

    return 0;
}
