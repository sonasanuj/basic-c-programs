#include<stdio.h>
#include<string.h>
int main()
{
int i,l=0,flag=1;
char str[20];
    printf("enter a string:");
    fgets(str,sizeof(str),stdin);
    for(i=0;str[i]!=0;i++)
    {
        l++;
    }
    if(str[l-1]=='\n')
        l--;
    for(i=0;i<l/2;i++)
    {
        if(str[i]!=str[l-1-i])
        {
            flag=0;
            break;
        }
    }
    if(flag==1)
        printf("string is palindrome");
    else
        printf("not a palindrome");
    return 0;
}
