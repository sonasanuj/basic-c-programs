#include<stdio.h>

int main()
{
    int mat1[20][20], mat2[20][20], mat3[20][20];
    int row, col, i, j;

    // Input size
    printf("Enter the number of rows and columns: ");
    scanf("%d%d", &row, &col);

    // Matrix 1
    printf("\nEnter elements of Matrix 1:\n");
    for(i = 0; i < row; i++)
    {
        for(j = 0; j < col; j++)
        {
            scanf("%d", &mat1[i][j]);
        }
    }

    // Matrix 2
    printf("\nEnter elements of Matrix 2:\n");
    for(i = 0; i < row; i++)
    {
        for(j = 0; j < col; j++)
        {
            scanf("%d", &mat2[i][j]);
        }
    }

    // Matrix addition
    for(i = 0; i < row; i++)
    {
        for(j = 0; j < col; j++)
        {
            mat3[i][j] = mat1[i][j] + mat2[i][j];
        }
    }

    // Print sum
    printf("\nSum of matrices:\n");
    for(i = 0; i < row; i++)
    {
        for(j = 0; j < col; j++)
        {
            printf("%d ", mat3[i][j]);
        }
        printf("\n");  // new line after each row
    }

    return 0;
}
