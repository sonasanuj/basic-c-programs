#include<stdio.h>
#include<string.h>
int main()
{
    char str[20];
    int i,l=0;
    char temp;
    printf("enter a string:");
    fgets(str,sizeof(str),stdin);
    for(i=0;str[i]!='\0';i++)
    {
        l++;
    }
    if(str[l-1]=='\n')
        l--;
    for(i=0;i<l/2;i++)
    {
        temp=str[i];
        str[i]=str[l-1-i];
        str[l-1-i]=temp;
    }
    printf("reversed string:%s",str);
    return 0;
} 
